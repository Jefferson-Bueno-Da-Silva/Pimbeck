@model Pimbeck.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_categoria_quarto" />
            <div class="form-group">
                <label asp-for="nome_categoria_quarto" class="control-label"></label>
                <input asp-for="nome_categoria_quarto" class="form-control" />
                <span asp-validation-for="nome_categoria_quarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtd_camas" class="control-label"></label>
                <input asp-for="qtd_camas" class="form-control" />
                <span asp-validation-for="qtd_camas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_categoria_quarto" class="control-label"></label>
                <input asp-for="valor_categoria_quarto" class="form-control" />
                <span asp-validation-for="valor_categoria_quarto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
