@model Pimbeck.Models.Usuarios

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar usuario</h1>

<h3>Você está certo que deseja deletar o usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.senha_usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.senha_usuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id_funcionario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_funcionario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_usuario" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
